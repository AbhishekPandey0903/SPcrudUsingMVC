@model IEnumerable<SPCrudUsingEntityMVC.Models.tb_ProductMaster>

@{
    ViewBag.Title = "Index";
}

<div class="container" style="background-color:antiquewhite">
    <div class="row">
        <div class="col-md-10"> <h3>Product List</h3></div>
        <div class="col-md-2"><button type="submit" class="btn btn-outline-warning">@Html.ActionLink("Create", "Create")</button></div>
    </div>
    <table class="table table-light table-striped mt-4">
        <thead>
            <tr>
                <th>ProductName</th>
                <th>ManufaturingDate</th>
                <th>Discription</th>
                <th>Heading</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.ManufaturingDate.ToShortDateString()</td>
                    <td>@item.Discription</td>
                    <td>@item.Heading</td>
                    <td>
                        <button type="submit" class="btn btn-outline-info">@Html.ActionLink("Edit", "Edit", new { Id = item.Id })</button>
                        <button type="submit" class="btn btn-outline-danger">@Html.ActionLink("Delete", "Delete", new { Id = item.Id })</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
