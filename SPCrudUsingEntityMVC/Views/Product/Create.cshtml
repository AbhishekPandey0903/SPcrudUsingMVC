@model SPCrudUsingEntityMVC.Models.tb_ProductMaster

@{
    ViewBag.Title = "Create";
}

<h2>Create Product</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>ProductName</label>
                    <div class="col-md-10">
                        <input type="text" name="ProductName" class="form-control" required>
                        @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>ManufaturingDate</label>
                    <div class="col-md-10">
                        <input type="date" name="ManufaturingDate" class="form-control" required>
                        @Html.ValidationMessageFor(model => model.ManufaturingDate, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Discription</label>
                    <div class="col-md-10">
                        <input type="text" name="Discription" class="form-control" required>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Heading</label>
                    <div class="col-md-10">
                        <input type="text" name="Heading" class="form-control" required>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mt-3">
                @Html.ActionLink("Back to List", "Index")
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div class="mt-3">
                        <input type="submit" value="Create" class="btn btn-outline-success" />
                    </div>
                </div>
            </div>

        </div>
    </div>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
